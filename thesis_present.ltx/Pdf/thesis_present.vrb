
\frametitle{Ορισμοί \e{or\_type} και \e{prefix functions}}


\begin{otherlanguage}{english}
\begin{verbatim}
or_type Bool
values true | false

or_type Possibly(T1)
values the_value:T1 | no_value

or_type Result(T1)OrError(T2)
values result:T1 | error:T2

>>> the_value:1
  : Possibly(Int)
>>> the_value:_
  : T1 => Possibly(T1)
>>> result:1
  : Result(Int)OrError(T1)

\end{verbatim}
\end{otherlanguage}

